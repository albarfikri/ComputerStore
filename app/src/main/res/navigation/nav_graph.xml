<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/locationFragment"
        android:name="com.albar.computerstore.ui.fragments.LocationFragment"
        android:label="LocationFragment" />
    <fragment
        android:id="@+id/list"
        android:name="com.albar.computerstore.ui.fragments.ComputerStoreListFragment"
        android:label="ComputerStoreListFragment">
        <action
            android:id="@+id/action_list_to_locationFragment"
            app:destination="@id/locationFragment" />
    </fragment>
    <fragment
        android:id="@+id/nearest"
        android:name="com.albar.computerstore.ui.fragments.NearestFragment"
        android:label="NearestFragment">
        <action
            android:id="@+id/action_nearest_to_locationFragment"
            app:destination="@id/locationFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.albar.computerstore.ui.fragments.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_locationFragment"
            app:destination="@id/locationFragment"
            app:launchSingleTop="true"
            app:popUpToInclusive="true" />
    </fragment><action android:id="@+id/action_global_locationFragment" app:destination="@id/locationFragment"/>
</navigation>